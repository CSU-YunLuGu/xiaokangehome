page {
  background: rgba(244, 244, 244, 1);
}

.chosen {
  background-color: rgba(253, 121, 82, 1);
  color: white;
}

.notchosen {
  background-color: rgb(179, 179, 179);
  color: rgba(0, 0, 0, 0.5);
}

.doctor {
  position: absolute;
  left: 100rpx;
  top: 50%;
  width: 250rpx;
  height: 200rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 200rpx;
  font-weight: 700;
}

.patient {
  position: absolute;
  left: 400rpx;
  top: 50%;
  width: 250rpx;
  height: 200rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 200rpx;
  font-weight: 700;
}

.loginbutton {
  position: absolute;
  left: 50%;
  top: 60%;
  transform: translateX(-50%);
  width: 550rpx;
  height: 70rpx;
  opacity: 1;
  border-radius: 10rpx;
  background: rgba(253, 121, 82, 1);
  display: flex; 
  align-items: center; 
  justify-content: center; 
  color: rgba(244, 244, 244, 1); 
  font-size: 30rpx; 
  font-weight: 700;
}

.loginexplain {
  position: absolute;
  left: 50%;
  top: 55%;
  transform: translateX(-50%);
  font-size: 20rpx;
  font-weight: 400;
  font-family: '黑体';
  line-height: 20rpx;
  color: rgba(128, 128, 128, 1);
  text-align: center;
  vertical-align: top;
}

.loginelse {
  position: absolute;
  left: 50%;
  top: 82%;
  transform: translateX(-50%);
  font-size: 26rpx;
  font-family: '黑体';
  font-weight: 400;
  line-height: 30rpx;
  color: rgba(166, 166, 166, 0.8);
  text-align: center;
  vertical-align: top;
}

.logo {
  position: absolute;
  left: 50%;
  top: 25%;
  transform: translateX(-50%);
}

.index {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.image {
  width: 250rpx;
  height: 220rpx;
  opacity: 1;
}

.explain {
  margin-top: 20rpx;
  font-family: '黑体';
  text-align: center;
  letter-spacing: 10rpx;
  font-size: 50rpx;
  font-weight: 400;
  line-height: 60rpx;
  color: rgba(253, 151, 120, 1);
}



