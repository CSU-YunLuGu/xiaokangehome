<bg color="{{backgroundColor}}" />
<title title="{{title}}" subtitle="{{subtitle}}"></title>
<return />

<view class="box">
  <view class="add">
    <view class="title">
      今日记录
    </view>
    <view class="typetext">
      记录类型
    </view>
    <view class="detailtext">
      记录内容
    </view>
    <view class="medicinebutton {{mclass}}" bind:tap="onChooseMedicine">
      吃药记录
    </view>
    <view class="consultbutton {{cclass}}" bind:tap="onChooseConsult">
      看病记录
    </view>
    <textarea class="input" value="{{text}}" bindinput="handleInput" placeholder="请输入内容"></textarea>
    <view class="submit" bind:tap="onRecordSubmit">提交记录</view>
  </view>
</view>